<% include ./partials/header%>

<!-- Default form contact -->
<div class="completeRegistration">
<form method="POST" action="/client/completeQualifications">
    <p class="h4 text-center mb-4">Complete Yor Profile</p>

    <!-- Default input name -->

<!-- Basic dropdown -->

    <select class="dropdown-qualifications" name="educationLevel">
      <option <% if (educationLevel==2){ %>
          selected
          <%}%> value="1">Below High School</option>

      <option <% if (educationLevel==1){ %>
          selected
          <%}%> value="2">High School</option>

      <option <% if (educationLevel==3){ %>
          selected
          <%}%> value="3">College</option>

      <option <% if (educationLevel==4){ %>
          selected
          <%}%> value="4">Graduate School & Above</option>
    </select>
<br>

    <!-- Default input email -->
    <label for="defaultFormContactEmailEx" class="grey-text"> Enter The institution</label>
    <input type="text" id="defaultFormContactEmailEx" class="form-control" name="institution" value= "<%= institution %>" placeholder="Institution">
    <br>

    <!-- Default input subject -->
    <select class="dropdown-qualifications" name="educationLevel">
      <option <% if (skillType =="Analytics"){ %>
          selected
          <%}%> value="Analytics">Analytics</option>

      <option <% if (skillType=="Website Development"){ %>
          selected
          <%}%> value="Website Development">Website Development</option>

      <option <% if (skillType=="Writing"){ %>
          selected
          <%}%> value="Writing">Writing</option>

      <option <% if (skillType=="Marketing"){ %>
          selected
          <%}%> value="Marketing">Marketing</option>
    </select>

    <br>

    <div class="text-center mt-4">
        <input type="submit"  class="btn btn-outline-warning" value="Update">
    </div>
</form>
</div>
