<% include ./partials/adminheader %>

<div class="prison-row">
<div class="row">
  <% for(var counter=0; counter<data.length; counter++) { %>

  <div class="col-md-4"><form method="POST" action="/prison/completeRegistration">
      <p class="h4 text-center mb-4"><%= data[counter].first_name%> Profile</p>

      <!-- Default input name -->

  <!-- Basic dropdown -->

      <select class="dropdown-qualifications" name="educationLevel">
        <option <% if (data[counter].education_level==2){ %>
            selected
            <%}%> value="1">Below High School</option>

        <option <% if (data[counter].education_level==1){ %>
            selected
            <%}%> value="2">High School</option>

        <option <% if (data[counter].education_level==3){ %>
            selected
            <%}%> value="3">College</option>

        <option <% if (data[counter].education_level==4){ %>
            selected
            <%}%> value="4">Graduate School & Above</option>
      </select>
  <br>

      <!-- Default input email -->
      <label for="defaultFormContactEmailEx" class="grey-text"> Enter The institution</label>
      <input type="text" id="defaultFormContactEmailEx" class="form-control" name="institution" value= "<%= data[counter].institution %>" placeholder="Institution">
      <br>

      <!-- Default input subject -->
      <label for="defaultFormContactSubjectEx" class="grey-text">Skill Type</label>
      <input type="text" id="defaultFormContactSubjectEx" class="form-control" name="skillType" value= "<%= data[counter].skill_type %>" placeholder="Skill Type">

      <br>

      <div class="text-center mt-4">
          <input type="submit"  class="btn btn-outline-warning" value="Approve">
      </div>
  </form>  </div>
  <% } %>


</div>
</div>

<% include ./partials/adminheader %>
